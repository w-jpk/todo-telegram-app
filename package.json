{
  "name": "todo-telegram-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --port 3002",
    "generate": "nuxt generate",
    "preview": "nuxt preview --port 3002",
    "postinstall": "nuxt prepare",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:dev": "NODE_ENV=development vitest --watch",
    "test:dev:ui": "NODE_ENV=development vitest --ui",
    "test:dev:coverage": "NODE_ENV=development vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:dev": "NODE_ENV=development playwright test",
    "test:all": "npm run test:run && npm run test:e2e",
    "lint": "eslint . --ext .vue,.js,.ts",
    "lint:fix": "eslint . --ext .vue,.js,.ts --fix",
    "db:init": "node scripts/init-db.js",
    "db:init:sql": "psql $DATABASE_URL -f scripts/init-db.sql",
    "db:init:api": "curl -X POST http://localhost:3002/api/db/init"
  },
  "dependencies": {
    "@nuxt/eslint": "^1.10.0",
    "@tanstack/vue-virtual": "^3.13.12",
    "lucide-vue-next": "^0.294.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "vue-draggable-next": "^2.3.0"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxt/eslint-config": "^1.10.0",
    "@nuxt/test-utils": "^3.20.1",
    "@nuxt/typescript-build": "^3.0.2",
    "@nuxtjs/i18n": "^10.2.0",
    "@nuxtjs/tailwindcss": "^6.8.4",
    "@playwright/test": "^1.56.1",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.16",
    "dotenv": "^16.3.1",
    "eslint": "^9.39.1",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "nuxt": "^3.20.1",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.3"
  }
}
